<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">{{tool.title}} v{{tool.version}}</li>
</ol>
<div id="map-wrapper" class="panel panel-default">
  <div id="map" style="height:400px; width:100%"></div>
</div>
<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Quakes
          <small class="text-muted">Found <span id="found"></span></small>
        </h3>
      </div>
      <div class="list-group" id="quakes">

      </div>

    </div>
  </div>
  <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Filters
        </h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <label class="control-label">Date Span</label>
          <select class="form-control" id="ds">
            {{#each datespans}}
              <option {{selected}} value="{{alias}}">{{label}}</option>
            {{/each}}
          </select>
        </div>
        <div class="form-group">
          <label class="control-label">Minimum Magnitute</label>
          <input class="form-control" value="{{defaults.limit}}" id="lm" />
        </div>
        <div class="form-group">
          <label class="control-label">Limit</label>
          <input class="form-control" value="{{defaults.mag_min}}" id="mg" />
        </div>
        <button id="refresh" class="btn btn-block btn-default">Refresh</button>
      </div>
    </div>
  </div>
</div>
